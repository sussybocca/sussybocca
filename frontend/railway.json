{
  "$schema": "https://railway.app/railway.schema.json",
  "services": {
    "frontend": {
      "path": "frontend",
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install && npm run build"
      },
      "deploy": {
        "startCommand": "npm start",
        "port": 3000
      }
    },
    "backend": {
      "path": "backend",
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install && npm run build"
      },
      "deploy": {
        "startCommand": "npm run start",
        "port": 5000
      }
    }
  }
}
