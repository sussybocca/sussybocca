{
  "services": {
    "frontend": {
      "path": "frontend",
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install && npm run build"
      },
      "deploy": {
        "startCommand": "./start.sh frontend",
        "port": 3000
      }
    },
    "backend": {
      "path": "backend",
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install && npm run build"
      },
      "deploy": {
        "startCommand": "./start.sh backend",
        "port": 5000
      }
    }
  }
}
